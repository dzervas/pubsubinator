	"version": "0.2.0",
	"configurations": [
		{
			"type": "probe-rs-debug",
			"request": "launch",
			"preLaunchTask": "rust: cargo build",
			"name": "probe-rs Test",
			"cwd": "${workspaceFolder}",
			"connectUnderReset": false,
			"runtimeExecutable": "/home/dzervas/.cargo/bin/probe-rs",
			"chip": "nRF52840_xxAA",
			"consoleLogLevel": "Debug",
			"flashingConfig": {
				"flashingEnabled": true,
				"haltAfterReset": false,
			},
			"coreConfigs": [{
				"coreIndex": 0,
				"programBinary": "target/thumbv7em-none-eabi/debug/${workspaceFolderBasename}",
				// "rttChannelFormats": [
				// 	{
				// 		"channelNumber": 0,
